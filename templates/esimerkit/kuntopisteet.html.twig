  </thead>
  <tbody>
    <tr>
      <th scope="row">{{nimi}}</th>
      <td>{{holkka}}km, {{holkkapisteet}} yht.</td>
      <td>{{hiihto}}km, {{hiihtopisteet}} yht.</td>
      <td>{{kavely}}km, {{kavelypisteet}} yht.</td>
